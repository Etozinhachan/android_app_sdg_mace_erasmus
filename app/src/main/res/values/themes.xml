<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.OdsMaceErasmusApp.DarkActionBar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Global Button Background -->
        <item name="colorPrimary">@color/mace_dark_blue</item>
        <item name="colorSecondary">@color/mace_light_green</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
        <!-- Global Button Text Color -->
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">noto</item>
    </style>

    <style name="myActionButtonStyle" parent="Widget.AppCompat.ActionButton">
        <item name="android:minWidth">100dp</item>
        <item name="android:maxWidth">150dp</item>
        <item name="android:width">120dp</item>
    </style>

    <style name="Base.Theme.OdsMaceErasmusApp.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="colorPrimary">@color/mace_dark_blue</item>
        <item name="colorSecondary">@color/mace_light_green</item>
        <item name="actionBarStyle">@style/MyActionBar</item>

        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">noto</item>

    </style>

    <style name="Theme.OdsMaceErasmusApp.DarkActionBar" parent="Base.Theme.OdsMaceErasmusApp.DarkActionBar" />

    <style name="Theme.OdsMaceErasmusApp.NoActionBar" parent="Base.Theme.OdsMaceErasmusApp.NoActionBar" />

</resources>